@model AddEditArticleViewModel

@{
    ViewBag.Title = "Write a New Article";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post" id="myForm" onsubmit="notify(event)">
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label-add-edit">Title</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3 text-center">
                <input class="btn btn-primary fw-bold text" type="submit" value="Done" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function notify(e)
        {
            e = e || window.event;
			e.preventDefault();
            Swal.fire({
                position: 'center',
                icon: 'success',
                title: 'Succesfully edited article!',
                showConfirmButton: false,
                timer: 1500
            }).then((result) => {
                    const myForm = document.getElementById("myForm");
				    myForm.submit();
                })
        }
    </script>
}