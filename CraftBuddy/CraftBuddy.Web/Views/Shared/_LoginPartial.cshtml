@using CraftBuddy.Data.Models;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="" asp-controller="User" asp-action="Logout">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item-dropdown me-1">
        <div class="dropdown">
            <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">Register</button>
            <ul class="dropdown-menu">
                <li class="nav-item">
                   <a class="nav-link text-dark" asp-area="Crafter" asp-controller="CrafterUser" asp-action="Register">Register as Crafter</a>
                </li>
                <li class="nav-item">
                   <a class="nav-link text-dark" asp-area="Client" asp-controller="ClientUser" asp-action="Register">Register as Client</a>
                </li>
            </ul>
        </div>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Login</a>
    </li>
}
</ul>
